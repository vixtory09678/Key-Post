<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="75dp">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/itemTabColor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="#ff0000" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <ProgressBar
                android:id="@+id/score"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:layout_below="@+id/itemTextTitle" />

            <TextView
                android:id="@+id/itemTextTitle"
                android:textColor="@color/text_black"
                android:textAlignment="center"
                android:textSize="@dimen/text_items_size"
                android:layout_margin="8dp"
                android:text="Hello World"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent">
            <Button
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:id="@+id/itemBtnEdit"
                android:drawableLeft="@drawable/ic_more_vert_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>